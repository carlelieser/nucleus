{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ES2022",
    "lib": ["ESNext", "dom"],
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "preserveValueImports": true
  },
  "include": [
    "src/**/*"
  ]
}
